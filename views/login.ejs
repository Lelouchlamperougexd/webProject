<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">LOGIN FORM</h1>

        <!-- Error Alert (Hidden by Default) -->
        <div id="error-alert" class="alert alert-danger d-none text-center" role="alert"></div>

        <form action="/login" method="POST" class="w-50 mx-auto border p-4 shadow-sm rounded">
            <!-- Username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" minlength="3" required>
            </div>
            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
            </div>
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <div class="text-center mt-3">
                <a href="/register">Did't have account? Register</a>
            </div>
            <!-- Forgot Password Link -->
            <div class="text-center mt-3">
                <a href="/forgot-password">Forgot Password?</a>
            </div>
        </form>
    </div>

    <script>
        // Display error message from URL parameter (e.g., /login?error=Invalid Credentials)
        const params = new URLSearchParams(window.location.search);
        const errorMessage = params.get('error');
        if (errorMessage) {
            const errorAlert = document.getElementById('error-alert');
            errorAlert.textContent = errorMessage;
            errorAlert.classList.remove('d-none');
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
