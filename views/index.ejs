<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SE-2323 Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        a {
            float: right;    
        }
    </style>
</head>
<body>
    <p class="h1 text-center mt-5">SE-2323 Group List</p>
    <div class="container">
        <div class="row align-items-center">
            <!-- Centered Search Form -->
            <div class="col-md-6 offset-md-3 d-flex justify-content-center">
                <form action="/" method="POST" class="d-flex">
                    <input type="text" id="searchName" name="searchName" class="form-control me-2">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="col-md-3 text-end">
                <% if (session.admin) { %>
                    <p class="text-muted mb-1">Logged in as: <strong><%= session.admin.username %></strong></p>
                    <a href="/logout" class="btn btn-outline-danger me-2">Logout</a>
                    <a href="/account" class="btn btn-outline-primary me-2">Account</a>
                <% } else { %>
                    <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                    <a href="/register" class="btn btn-outline-success me-2">Register</a>
                <% } %>
            </div>
        </div>
    </div>
    <div class="container mt-5">
    <ul class="list-group w-50 mx-auto mt-4">
        <% students.forEach(student => { %>
            <li class="list-group-item">
                <strong><%= student.name %></strong>: <%= student.age %>
                (<%= student.gender ? 'Male' : 'Female' %>)
                <% if (session.admin) { %>
                    <a href="/delete/<%= student.id %>" class="btn btn-danger btn-sm ms-3">Delete</a>
                    <a href="/edit/<%= student.id %>" class="btn btn-warning btn-sm ms-3">Edit</a>
                <% } %>
            </li>
        <% }); %>
    </ul>
    </div>
    <div class="d-flex justify-content-center mt-3">
        <% if (session.admin) { %>
            <a href="/add" class="btn btn-success btn-sm ms-3">Add New Student</a>
        <% } %>
    </div>
</body>
</html>
